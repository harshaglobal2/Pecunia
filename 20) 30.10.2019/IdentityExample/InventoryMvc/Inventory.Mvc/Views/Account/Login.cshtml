@model Inventory.Mvc.Models.LoginViewModel
@using System.Web.Optimization
@Scripts.Render("~/scripts/jqueryvalidation")

@{
    ViewBag.Title = "Login";
}

<style>
    .field-validation-error
    {
        color: red;
    }
</style>

<h2>Login</h2>

@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    <div class="row">

        <div class="col-md-6 mx-auto">

            <div class="form-group form-row">
                @Html.LabelFor(temp => temp.Email,
                    new { @class="col-form-label col-lg-3 my-color" })
                <div class="col-lg-9">
                    @Html.TextBoxFor(temp => temp.Email,
                    new { @class = "form-control", placeholder = "Email" })
                    @Html.ValidationMessageFor(temp => temp.Email)
                </div>
            </div>

            <div class="form-group form-row">
                @Html.LabelFor(temp => temp.Password,
                    new { @class="col-form-label col-lg-3" })
                <div class="col-lg-9">
                    @Html.PasswordFor(temp => temp.Password,
                    new { @class = "form-control", placeholder = "Password" })
                    @Html.ValidationMessageFor(temp => temp.Password)
                </div>
                </div>

                <div class="border-top text-right pt-2">
                    @Html.ValidationSummary()
                    <button class="btn btn-success">Login</button>
                </div>
            </div>

    </div>
}

